= render "shared/header"
- breadcrumb :category
= render "layouts/breadcrumbs"
.search-main
  .search-main__name
    = @dog.name
  .search-main__group-name
    グループ#{@dog.parent.name}
  .search-main__wrap
    = image_tag "#{@dog.image}", height: '400', width: '400'
    .search-main__wrap__feature
      .search-main__wrap__feature--item
        サイズ：#{@dog.size}
      .search-main__wrap__feature--item
        原産国： #{@dog.origin}
      .search-main__wrap__feature--item
        用途： #{@dog.use}
      .search-main__wrap__feature--item
        説明文： #{@dog.text}
      %h3
        いいね件数: #{@dog.likes.count}
      - if current_user.already_liked?(@dog)
        = button_to 'いいねを取り消す', dog_like_path(@dog), method: :delete
      - else
        = button_to 'いいね', dog_likes_path(@dog)
      %h2 いいねしたユーザー
      - @dog.liked_users.each do |user|
        %li= user.email
