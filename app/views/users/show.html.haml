= render "shared/header"
.wrap-user-show
  .left-box
    = link_to "犬を登録する", new_pet_path, class:"test"
    %h3 いいねしている犬種
    - @user.liked_dogs.each do |dog|
      = image_tag "#{dog.image}", alt: '', height: '200', width: '200', class: ''
  .wrap-user-show__pets-list
    - @pets.each do |p|
      .wrap-user-show__pets-list__pet
        = image_tag "#{p.image}", height: '200', width: '200', class:"pet-img"
        .wrap-user-show__pets-list__pet--wrap
          %p name: #{p.name}
          %p category: #{p.dog_id}
          %p age: #{p.age}
          %p sex: #{p.sex.name}
          %p text: #{p.text}
          .btn
            = link_to "編集　", "#"
            = link_to "削除", "#"
